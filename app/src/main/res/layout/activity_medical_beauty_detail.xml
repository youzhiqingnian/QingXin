<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.vlee78.android.vl.VLTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <ScrollView
        android:id="@+id/scrollSv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleBar"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/medicalBeautyCoverSdv"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:roundedCornerRadius="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:text="水光针"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="13dp"
                android:lineSpacingExtra="6dp"
                android:text="我想要吃东西吃点东西吃好多好多东西，吃美食，吃想的喝辣的"
                android:textColor="@color/text_color"
                android:textSize="14sp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="18dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/categoryTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:drawableTop="@mipmap/category_logo"
                    android:gravity="center_horizontal"
                    android:paddingBottom="28dp"
                    android:paddingTop="28dp"
                    android:text="注射类"
                    android:textColor="@color/text_color_hint"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/painLevelTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:drawableTop="@mipmap/pain_index_logo"
                    android:gravity="center_horizontal"
                    android:paddingBottom="28dp"
                    android:paddingTop="28dp"
                    android:text="疼痛1星"
                    android:textColor="@color/text_color_hint"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/takeEffectDurationTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:drawableTop="@mipmap/take_effect_logo"
                    android:gravity="center_horizontal"
                    android:paddingBottom="28dp"
                    android:paddingTop="28dp"
                    android:text="3天见效"
                    android:textColor="@color/text_color_hint"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/recoveryDurationTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:drawableTop="@mipmap/recover_duration_logo"
                    android:gravity="center_horizontal"
                    android:paddingBottom="28dp"
                    android:paddingTop="28dp"
                    android:text="3天恢复"
                    android:textColor="@color/text_color_hint"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gap_color_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/characteristic"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/characteristicTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="7sp"
                android:paddingBottom="14dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="14dp"
                android:text="我爱你，塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gap_color_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/attention"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/attentionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="7sp"
                android:paddingBottom="14dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="14dp"
                android:text="我爱你，塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪塞北的雪"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gap_color_gray" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

