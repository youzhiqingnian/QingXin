<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/top_radius_blue_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_qingxin_coin_balance"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42dp"
                />
            <TextView
                android:id="@+id/myQingxinCoinBalanceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="1000"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/withdrawals_balance"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                />
            <TextView
                android:id="@+id/withdrawalsBalanceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginBottom="34dp"
                android:text="1000"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:background="@drawable/bottom_radius_white_bg"
            >
            <TextView
                android:id="@+id/saveAndSaveTv"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/text_color_blue"
                android:gravity="center"
                android:text="@string/save_and_save"
                android:background="@drawable/blue_stroke_6dpradius_bg"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/confirmWithdrawalTv"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/blue_button_6dpraduis"
                android:textColor="@color/white"
                android:text="@string/confirm_withdrawal"
                android:gravity="center"
                android:textSize="16sp"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>