<resources>

    <!-- Base application theme. -->

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LibraryVideoMediaControllerSeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/library_video_layer_sbar_bg</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:maxHeight">1dp</item>
        <item name="android:thumb">@drawable/library_video_selector_sbar_thumb</item>
    </style>

    <!-- video -->
    <style name="MediaController_Text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="CustomProgressBar_Small">
        <item name="android:indeterminateDrawable">@drawable/progress_small_holo</item>
        <item name="android:minWidth">45dip</item>
        <item name="android:maxWidth">45dip</item>
        <item name="android:minHeight">45dip</item>
        <item name="android:maxHeight">45dip</item>
    </style>

</resources>
